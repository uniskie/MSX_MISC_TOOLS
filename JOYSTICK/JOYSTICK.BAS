10 CLEAR200,&HD000:DEFINTA-Z
20 CLS
30 BLOAD"joystick.bin"
40 DEFUSR=&HD000
50 JY=0:LOCATE0,0:GOSUB 100
60 JY=1:LOCATE0,8:GOSUB 100
70 TIME=0:FORI=0TO1:I=TIME:NEXT
80 GOTO 50
90 END
100 A=USR(JY)
110 PRINT"JOY ";HEX$(JY+1);"  :BARLDU"
120 PRINT"Press  :";RIGHT$(BIN$(PEEK(A+0)OR64),6)
130 PRINT"Trig   :";RIGHT$(BIN$(PEEK(A+1)OR64),6)
140 PRINT"Release:";RIGHT$(BIN$(PEEK(A+2)OR64),6)
150 PRINT"Repeat :";RIGHT$(BIN$(PEEK(A+3)OR64),6)
160 PRINT"Rep_1st:";RIGHT$(HEX$(PEEK(A+4)+256),2)
170 PRINT"Rep_int:";RIGHT$(HEX$(PEEK(A+5)+256),2)
180 RETURN
