510 P(3)=P(2):P(2)=P(1):RETURN
520 P(2)=P(2) OR P(1):P(1)=P(0):RETURN
530 P(2)=120:P(4)=112:RETURN
540 P(3)=P(3)OR P(4):P(4)=0:RETURN
550 P(2)=P(2)OR(P(1)AND15):P(1)=(P(1)AND240)OR P(0):P(6)=0:RETURN
